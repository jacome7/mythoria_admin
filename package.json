{
  "name": "mythoria_admin",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3001",
    "build": "next build",
    "start": "next start --port 3001",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "logs": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\logs.ps1",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx -r dotenv/config ./src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx -r dotenv/config ./src/db/reset.ts",
    "db:setup": "npm run db:reset && npm run db:push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx -r dotenv/config ./src/db/seed.ts",
    "sync-workflows-schema": "tsx -r dotenv/config ./scripts/sync-workflows-schema.ts",
    "sync-mythoria-db-schema": "tsx -r dotenv/config ./scripts/sync-mythoria-db-schema.ts",
    "deploy": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\deploy.ps1",
    "deploy:fast": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\deploy.ps1 -Fast",
    "check:env": "tsx ./scripts/check-env-parity.ts"
  },
  "sideEffects": false,
  "dependencies": {
    "@google-cloud/pubsub": "^5.2.0",
    "@google-cloud/workflows": "^4.4.0",
    "@types/jsdom": "^21.1.7",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "daisyui": "^5.0.50",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "jsdom": "^26.1.0",
    "next": "^15.4.6",
    "next-auth": "^5.0.0-beta.29",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "rehype-autolink-headings": "^7.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "tsx": "^4.20.4",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0",
    "uuid": "^11.1.0",
    "vfile": "^6.0.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.12",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "esbuild": ">=0.24.3"
  }
}