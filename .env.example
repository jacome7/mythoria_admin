# Mythoria Admin Portal Environment Variables

# Database Configuration (shared across all databases)
DB_HOST=10.19.192.3
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_MAX_CONNECTIONS=10

# Individual Database Names
MYTHORIA_DB=mythoria_db
WORKFLOWS_DB=workflows_db
BACKOFFICE_DB=backoffice_db

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3001"

# Google OAuth (for admin access)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# API Key Authentication
# Primary API key for service-to-service communication
ADMIN_API_KEY="mythoria-admin-key-2024-secure-random-string"

# Additional API keys (optional, comma-separated)
# MYTHORIA_ADDITIONAL_API_KEYS="key1,key2,key3"

# Service URLs for health checks
WEBAPP_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
STORY_GENERATION_WORKFLOW_URL=http://localhost:8080
NOTIFICATION_ENGINE_URL=http://localhost:8081

# Cloud services
GOOGLE_CLOUD_PROJECT_ID=oceanic-beach-460916-n5
GOOGLE_CLOUD_REGION=europe-west9
